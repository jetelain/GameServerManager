@model GameServerManagerWebApp.Entites.GameServer

@{
    ViewData["Title"] = "Supprimer un serveur";
}

@section NavBar {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Serveurs</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
}

@section Title { <h1><span>@ViewData["Title"]</span></h1> }

<h3>Êtes vous sûre de vouloir supprimer ce serveur?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HostServer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HostServer.HostServerID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Label)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Label)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Port)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Port)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BasePath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BasePath)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastPollUtc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastPollUtc)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="GameServerID" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
    </form>
</div>
